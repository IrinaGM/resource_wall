<!DOCTYPE html>
<html lang="en">
<% include partials/header %>
<body>
  <!-- Top Navigation -->
  <% include partials/nav %>

  <main id="main-container">
    <!-- Side menu for topic selector -->
    <% include partials/sidemenu %>

    <section id="section-container">
      <div id="search-bar">
        <form action="/api/resources" id="searchForm">
          <input type="text" id="searchInput" name="search" placeholder="Quick search...">
          <button type="submit" class="fa-solid fa-magnifying-glass"></button>
        </form>
      </div>
      <div id="resource-container">
      <!-- Loops items -->
      <% resources.forEach(function(item) { %>
        <a href="/resource?id=<%= item.id %>">
          <item>
            <img alt="<%= item.title %>" src="./images/200x200-JS.png"/>
            <span><%= item.title %></span>
            <topic><%= item.topic_id %></topic>
          </item>
        </a>
      <% }); %>
    </div>
    </section>

  </main>
  <!-- Include footer information -->
  <% include partials/footer %>
</body>
</html>
